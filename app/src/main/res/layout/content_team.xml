<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_team"
    tools:context="com.technorio.inc.bloodbankplus.Team">



    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:id="@+id/imageButton"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:background="@drawable/gaurav" />

        <ImageButton
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:id="@+id/imageButton2"
            android:layout_row="0"

            android:layout_margin="3dp"
            android:layout_column="1"
            android:background="@drawable/tenzing" />

        <ImageButton
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:id="@+id/imageButton3"
            android:layout_row="0"
            android:layout_margin="3dp"
            android:layout_column="2"
            android:background="@drawable/nidesh" />

        <ImageButton
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:id="@+id/imageButton4"
            android:layout_row="1"
            android:layout_margin="3dp"
            android:layout_column="0"
            android:background="@drawable/prabin" />

        <ImageButton
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:id="@+id/imageButton5"
            android:layout_row="1"
            android:layout_margin="3dp"
            android:layout_column="1"
            android:background="@drawable/rikesh" />

        <ImageButton
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:id="@+id/imageButton6"
            android:layout_row="1"
            android:layout_margin="3dp"
            android:layout_column="2"
            android:background="@drawable/sabin" />

        <ImageButton
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:id="@+id/imageButton7"
            android:layout_row="2"
            android:layout_margin="3dp"
            android:layout_column="0"
            android:background="@drawable/shube" />

        <ImageButton
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:id="@+id/imageButton8"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:background="@drawable/zenish" />

    </GridLayout>
</LinearLayout>
